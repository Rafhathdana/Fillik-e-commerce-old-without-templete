<body class="rafcolour">
  <header><%- include('header') -%></header>
  <br />
  <br />
  <br />
  <div class="outer-box">
    <img class="inner-img" src="/images/qw1233.jpg" alt="Product Image" />
    <div class="productinfo">
      <div class="flex">
        <div class="product-id">Product ID:</div>
        <div class="product-id-value">234354232523</div>
      </div>
      <div class="flex">
        <div class="product-id">Status:</div>
        <div class="status-value">Active</div>
      </div>
    </div>
    <div class="text-block">
      <div class="plain-pattern">
        Color: <span class="pink-color">Pink </span>
      </div>
      <div class="plain-pattern">
        Pattern: <span class="pink-color">Plain</span>
      </div>
      <div class="plain-pattern">
        Gender: <span class="pink-color">Women</span>
      </div>
      <div class="plain-pattern">
        Category: <span class="pink-color">Top</span>
      </div>
    </div>
    <div class="sizes-box">
      <div class="heading">Quantity</div>
      <div class="sizes">
        <div class="size">Small: 17</div>
        <div class="size">Medium: 13</div>
        <div class="size">large: 25</div>
        <div class="size">X-Large: 4</div>
      </div>
    </div>

    <div class="prices mx-auto">
      <div class="product-price">Product Price:</div>
      <div class="product-price-value">RS.500.00</div>
      <div class="product-price">Actual Price:</div>
      <div class="product-price-value">RS.70.00</div>
      <span class="shorttext"> (After deducting 5% cut to us)</span>
    </div>
    <div class="flex-column">
      <div class="action-box1">
        <span class="action-text">Edit</span>
      </div>
      <div class="action-box1">
        <span class="action-text">Delete</span>
      </div>
    </div>
  </div>
</body>
